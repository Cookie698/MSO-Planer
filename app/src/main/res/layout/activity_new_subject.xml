<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_subject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.benjaminsalamon.msoplaner.NewSubject">

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/done"
        android:onClick="doneAction" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="abr"
        android:ems="10"
        android:layout_below="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_marginTop="20dp"
        android:id="@+id/abbreviation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="type"
        android:ems="10"
        android:layout_below="@+id/place"
        android:layout_alignStart="@+id/place"
        android:layout_marginTop="45dp"
        android:id="@+id/type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/teacher"
        android:ems="10"
        android:layout_marginTop="38dp"
        android:id="@+id/teacher"
        android:layout_below="@+id/type"
        android:layout_alignStart="@+id/type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Place"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/place"
        android:layout_below="@+id/abbreviation"
        android:layout_alignStart="@+id/abbreviation" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:onClick="cancelAction"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_marginTop="31dp"
        android:id="@+id/name"
        android:layout_below="@+id/done"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
